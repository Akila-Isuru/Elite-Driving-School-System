<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="https://www.google.com/search?q=http://javafx.com/javafx/17" xmlns:fx="https://www.google.com/search?q=http://javafx.com/fxml/1" fx:controller="lk.ijse.elitedrivingschoolsystem.Controller.StudentRegistrationController">
    <children>
        <Label layoutX="175.0" layoutY="30.0" text="Student Registration" >
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <GridPane layoutX="50.0" layoutY="80.0" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>

            <Label text="Student ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtStudentId" prefHeight="25.0" prefWidth="195.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="txtName" prefHeight="25.0" prefWidth="195.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="txtAddress" prefHeight="25.0" prefWidth="195.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="txtEmail" prefHeight="25.0" prefWidth="195.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Contact Number:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="txtContactNumber" prefHeight="25.0" prefWidth="195.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        </GridPane>

        <VBox layoutX="50.0" layoutY="250.0" spacing="5">
            <Label text="Select Courses:">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <CheckBox fx:id="chkC1001" text="C1001 - Basic Learner" />
            <CheckBox fx:id="chkC1002" text="C1002 - Advanced Driving" />
            <CheckBox fx:id="chkC1003" text="C1003 - Motorcycle Training" />
            <CheckBox fx:id="chkC1004" text="C1004 - Heavy Vehicle Training" />
            <CheckBox fx:id="chkC1005" text="C1005 - Refresher Course" />
        </VBox>

        <Button fx:id="btnRegister" layoutX="400.0" layoutY="380.0" text="Register Student" onAction="#handleRegisterButton" />

    </children>

</AnchorPane>